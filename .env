# Himalaya CLI - Email Management
# Install: brew install himalaya
# Config: ~/.config/himalaya/config.toml
# Requires Gmail App Password (not regular password): https://myaccount.google.com/apppasswords
#
# Config template:
# [accounts.gmail]
# email = "your-email@gmail.com"
# backend.type = "imap"
# backend.host = "imap.gmail.com"
# backend.port = 993
# backend.login = "your-email@gmail.com"
# backend.auth.type = "password"
# backend.auth.raw = "abcd efgh ijkl mnop"
# message.send.backend.type = "smtp"
# message.send.backend.host = "smtp.gmail.com"
# message.send.backend.port = 465
# message.send.backend.login = "your-email@gmail.com"
# message.send.backend.auth.type = "password"
# message.send.backend.auth.raw = "abcd efgh ijkl mnop"
#
# Commands:
# himalaya envelope list                              # List inbox
# himalaya envelope list -f "[Gmail]/All Mail"        # List all mail
# himalaya envelope list -f "[Gmail]/Drafts"          # List drafts
# himalaya envelope list "from:someone@example.com"   # Search by sender
# himalaya envelope list "subject:invoice"            # Search by subject
# himalaya envelope list "before:2024-01-01"          # Search by date
# himalaya envelope list "body:keyword"               # Search body
# himalaya envelope list "text:keyword"               # Search headers + body
# himalaya message read <id>                          # Read email
# himalaya message move "[Gmail]/All Mail" <id>       # Archive email
# himalaya message write                              # Compose (opens editor)
# himalaya message send                               # Send email
# himalaya attachment download <id>                   # Download attachments
#
# Drafts:
# himalaya message save -f "[Gmail]/Drafts"           # Save draft (no attachments)
# himalaya template save -f "[Gmail]/Drafts"          # Save draft (with MML attachments)
#
# MML Attachments (must use template save, not message save):
# <#part filename=/path/to/file.pdf><#/part>
# <#part filename=/path/to/file.pdf name=custom-name.pdf><#/part>
# <#part disposition=inline filename=/path/to/image.png><#/part>
#
# Example draft with attachment:
# cat <<'EOF' | himalaya template save -f "[Gmail]/Drafts"
# From: your-email@gmail.com
# To: recipient@example.com
# Subject: Document Attached
# Hi,
# Please find the document attached.
# Thanks
# <#part filename=/Users/yourname/Documents/file.pdf><#/part>
# EOF

# Email Preferences: "Hi" greeting, plaintext (no bold/italic), no em dashes, clickable hyperlinks, multipart (text/plain + text/html)
